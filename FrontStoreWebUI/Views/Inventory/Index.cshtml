@{
}


@{
    IEnumerable<InventoryVM> inventories = ViewData["Inventory"] as IEnumerable<InventoryVM>;
    IEnumerable<ProductVM> products = ViewData["Product"] as IEnumerable<ProductVM>;
    IEnumerable<StoreVM> stores = ViewData["StoreFront"] as IEnumerable<StoreVM>;

}

<h1> Inventory Check </h1>

<br />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ItemName</th>
            <th>Price</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProductVM p in products)
        {
            foreach (InventoryVM i in inventories)
            {


            <tr>
                <td>@Html.DisplayFor(modelItem => p.ItemName)</td>
                <td>@Html.DisplayFor(modelItem => p.Price)</td>
                <td>@Html.DisplayFor(modelItem => i.Quantity)</td>

            </tr>
            }
        }

    </tbody>
</table>