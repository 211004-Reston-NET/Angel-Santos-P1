@{
}

@model FrontStoreWebUI.Models.PurchaseOrderVM

<h1 class="display-4">Delete Order Log</h1>
<h3>Confirm deletion</h3>

<div>
    <dl>
        <dt>
            OrderId:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.OrderId)</span>
        </dt>
        
        <dt>
            CustomerId:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.CustomerId)</span>
        </dt>
        <dt>
            ProductId:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.ProductId)</span>
        </dt>
        <dt>
            TotalPrice:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.TotalPrice)</span>
        </dt>
        <dt>
            PurchaseDate:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.PurchaseDate)</span>
        </dt>

        <!--We need a form to do a post request-->
        <form asp-action="Delete">
            <!--
            This input element is hidden because we don't want the user to input some id instead we are just supplying the id w
            Already have
        -->
            <input type="hidden" asp-for="OrderId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </dl>
</div>