@model FrontStoreWebUI.Models.PurchaseOrderVM

<h1 class="display-4"> Cart - Make A Purchase </h1>




<form asp-action="Create">

    <div asp-validation-summary="ModelOnly"></div>



    <div class="mb-3">
        <label asp-for="CustomerId" class="form-label">CustomerId</label>
        <input asp-for="CustomerId" type="text" class="form-control">
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StoreFrontId" class="form-label">StoreFrontId</label>
        <input asp-for="StoreFrontId" type="text" class="form-control">
        <span asp-validation-for="StoreFrontId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductId" class="form-label">ProductId</label>
        <select asp-for="ProductId" type="text" class="form-control">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ItemName" class="form-label">ItemName</label>
        <input asp-for="ItemName" type="text" class="form-control">
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TotalPrice" class="form-label">TotalPrice</label>
        <input asp-for="TotalPrice" type="text" class="form-control">
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PurchaseDate" class="form-label">PurchaseDate</label>
        <input asp-for="PurchaseDate" type="text" class="form-control">
        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" value="Create">Submit</button>

</form>
 
