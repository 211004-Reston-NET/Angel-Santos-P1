<div name="Search-Customer">
    <form asp-controller="Customer" asp-action="Search">
        <p>
            Name: <input type="text" name="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>
</div>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>

        </tr>
        }
    </tbody>
    </table>



    <br />
    <br />

    <h1 class="display-4">List of Customers </h1>
    <a class="btn btn-success text-white" asp-controller="Customer" asp-action="Create">Add Customer</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th> First Name</th>
                <th> Last Name </th>
                <th> Street Address </th>
                <th> Email </th>
                <th> Phone </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (CustomerVM item in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.StreetAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>

                    <!--First parameter of ActionLink is the name it will give for this element -->
                    <!--Second parameter will point to the action of the restaurant controller-->
                    <!--Third parameter will give the information from the view to the controller-->


                </tr>
            }

        </tbody>
    </table>


